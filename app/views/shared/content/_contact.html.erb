<style type="text/css">
/** we'll move this out later **/
label {
  display: inline-table;
}
</style>
<section id="contact">
  <div class="container">
    <div class="featurette">
      <h2>We know you'll have questions</h2>
      <h3>Feel free to contact us at any time.</h3>
      <div id="form-container">
        <div class="row">
          <div class="span12">
            <%= form_for @message do |f| %>
              <fieldset>
                <div class="field">
                  <label for="message_name">
                    <%= f.text_field :name, placeholder: "Name" %>
                  </label>
                </div>
                <div class="field">
                  <label for="message_email">
                    <%= f.email_field(:email, placeholder: "Email") %>
                  </label>
                </div>
                <div class="field">
                  <label for="message_subject">
                    <%= f.text_field :subject, placeholder: "Subject"  %>
                  </label>
                </div>
                <div class="field">
                  <label for="message_body">
                    <%= f.text_area :body, placeholder: "Message", rows: 10 %>
                  </label>
                </div>
                <div id="select-box">
                  <%= label_tag "I want to..." %>
                  <%= f.select :reason_for_inquiry, options_for_select([["get more information", "info"],
                                                                        ["be a student", "student"], 
                                                                        ["be a tutor", "tutor"]], @message.reason_for_inquiry) %>
                </div>
                <div id="checkboxes">
                  <%= label_tag "I am interested in:" %>
                  <%= check_box "interests", "java" %>
                  <%= label_tag "interests[java]", "Java" %>
                  <%= check_box "interests", "web" %>
                  <%= label_tag "interests[web]", "Web" %>
                  <%= check_box "interests", "ios" %>
                  <%= label_tag "interests[ios]", "iOS" %>
                  <%= check_box "interests", "android" %>                  
                  <%= label_tag "interests[android]", "Android" %>
                </div>
              </fieldset>
              <fieldset>
                <div>
                  <%= f.submit "Send Message", id: "contact-form-submit" %>
                </div>
              </fieldset>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>